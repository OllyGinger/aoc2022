    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=aoc2022",
                    "--package=aoc2022"
                ],
                "filter": {
                    "name": "aoc2022",
                    "kind": "bin"
                }
            },
            "args": [
                "--day=7"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unit Tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=aoc2022",
                    "--package=aoc2022"
                ],
                "filter": {
                    "name": "aoc2022",
                    "kind": "bin"
                }
            },
            "args": [
                "solutions::day8::test_example",
                "--exact",
                "--nocapture"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}